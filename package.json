{
  "name": "@reliutg/buzz-notify",
  "version": "2.0.1",
  "description": "Small and Clean JavaScript Toast Notifications",
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "types": "./index.d.ts",
  "files": [
    "index.d.ts",
    "dist/**/*"
  ],
  "scripts": {
    "build": "rimraf dist && node ./scripts/build.js && tsc --emitDeclarationOnly --outDir .",
    "watch": "esbuild src/index.ts --bundle --sourcemap --format=esm --outdir=dist --watch",
    "prepare": "npm run build",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "postinstall": "git config core.hooksPath ./git-hooks"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ext {.ts} --ignore-unknown"
    ],
    "src/**/*.{js,jsx}": [
      "eslint . --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eliutgon/buzz-notify.git"
  },
  "keywords": [
    "notification",
    "small",
    "tiny"
  ],
  "author": "Eliut Gonz√°lez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eliutgon/buzz-notify/issues"
  },
  "homepage": "https://github.com/eliutgon/buzz-notify#readme",
  "devDependencies": {
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-conventional": "^13.2.0",
    "esbuild": "0.13.3",
    "eslint": "^7.32.0",
    "lint-staged": "^11.2.0",
    "prettier": "^2.4.1",
    "rimraf": "3.0.2",
    "typescript": "4.4.3"
  }
}
